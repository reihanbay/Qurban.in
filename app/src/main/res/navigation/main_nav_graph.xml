<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dicoding.qurbanin.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.dicoding.qurbanin.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="idEvent"
            app:argType="string" />
        <action
            android:id="@+id/action_detailFragment_to_homeContainerFragment"
            app:destination="@id/homeContainerFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/homeContainerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dicoding.qurbanin.ui.authentication.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeContainerFragment"
            app:destination="@id/homeContainerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.dicoding.qurbanin.ui.authentication.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.dicoding.qurbanin.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"  />
        <!--suppress NavigationFile -->
        <argument android:name="location"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/listQurbanFragment"
        android:name="com.dicoding.qurbanin.ui.list_qurban.ListQurbanFragment"
        android:label="fragment_list_qurban"
        tools:layout="@layout/fragment_list_qurban" >
        <action
            android:id="@+id/action_listQurbanFragment_to_statusQurbanFragment"
            app:destination="@id/statusQurbanFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.dicoding.qurbanin.ui.authentication.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_statusQurbanFragment"
            app:destination="@id/statusQurbanFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/statusQurbanFragment"
        android:name="com.dicoding.qurbanin.ui.detail.StatusQurbanFragment"
        android:label="fragment_status_qurban"
        tools:layout="@layout/fragment_status_qurban" >
        <argument android:name="idRegistered"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/homeContainerFragment"
        android:name="com.dicoding.qurbanin.ui.home.HomeContainerFragment"
        android:label="fragment_home_container"
        tools:layout="@layout/fragment_home_container" >
        <action
            android:id="@+id/action_homeContainerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeContainerFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeContainerFragment_to_statusQurbanFragment"
            app:destination="@id/statusQurbanFragment" />
        <action
            android:id="@+id/action_homeContainerFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>