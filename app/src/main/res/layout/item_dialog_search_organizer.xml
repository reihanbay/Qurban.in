<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="10dp"
        android:outlineSpotShadowColor="#26373737"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_view_organizer"
        tools:targetApi="p">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">
            <TextView
                android:id="@+id/text_enter_current_location"
                style="@style/TextBody.Bold.BodyLarge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                android:layout_width="0dp"
                android:paddingBottom="24dp"
                android:textColor="@color/green_40"
                android:text="@string/enter_current_location"/>
            <TextView
                android:id="@+id/text_province"
                style="@style/TextBody.Medium.LabelMedium"
                android:textColor="@color/green_40"
                android:text="@string/province"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_enter_current_location" />

            <EditText
                android:id="@+id/et_province"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:autofillHints=""
                android:background="@drawable/bg_custom_input"
                android:hint="@string/ex_province"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_province" />

            <TextView
                android:id="@+id/text_city"
                style="@style/TextBody.Medium.LabelMedium"
                android:textColor="@color/green_40"
                android:layout_marginStart="5dp"
                android:text="@string/city"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toTopOf="@id/text_province"
                app:layout_constraintBottom_toBottomOf="@id/text_province"/>

            <EditText
                android:id="@+id/et_city"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:autofillHints=""
                android:background="@drawable/bg_custom_input"
                android:hint="@string/ex_city"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/text_city" />

            <TextView
                android:id="@+id/text_district"
                style="@style/TextBody.Medium.LabelMedium"
                android:textColor="@color/green_40"
                android:layout_marginTop="6dp"
                android:text="@string/district"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_province" />

            <EditText
                android:id="@+id/et_district"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:autofillHints=""
                android:background="@drawable/bg_custom_input"
                android:hint="@string/ex_district"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@id/btn_search"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_district" />

            <TextView
                android:id="@+id/text_sub_district"
                style="@style/TextBody.Medium.LabelMedium"
                android:textColor="@color/green_40"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:text="@string/sub_district"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/et_city" />

            <EditText
                android:id="@+id/et_sub_district"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:autofillHints=""
                android:background="@drawable/bg_custom_input"
                android:hint="@string/ex_sub_district"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@id/btn_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/text_sub_district" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/Button"
                android:text="@string/lets_search"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
