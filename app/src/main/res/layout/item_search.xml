<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_mosque"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:background="@drawable/bg_rounded_8dp"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_mosque"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="s"
            android:contentDescription="Mosque" />


        <TextView
            android:id="@+id/tv_event"
            style="@style/TextBody.Medium.LabelMedium"
            android:layout_width="0dp"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_mosque"
            app:layout_constraintTop_toTopOf="@+id/iv_mosque"
            tools:text="Masjid" />

        <TextView
            android:id="@+id/tv_location"
            style="@style/TextBody.BodyVerySmall"
            android:layout_width="0dp"
            android:textColor="@color/grey_40"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="@+id/tv_event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event"
            tools:text="@string/dummy_user_location" />

        <TextView
            android:id="@+id/tv_label_event_date"
            style="@style/TextBody.Medium.BodyVerySmall"
            android:textColor="@color/grey_20"
            android:layout_marginTop="8dp"
            android:text="@string/label_event_date"
            app:layout_constraintStart_toStartOf="@+id/tv_location"
            app:layout_constraintTop_toBottomOf="@id/tv_location" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/TextBody.BodyVerySmall"
            android:textColor="@color/grey_40"
            app:layout_constraintStart_toStartOf="@+id/tv_label_event_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_event_date"
            tools:text="28 Juni 2024" />

        <TextView
            android:id="@+id/tv_label_event_time"
            style="@style/TextBody.Medium.BodyVerySmall"
            android:textColor="@color/grey_20"
            android:text="@string/label_event_time_take"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_label_event_date" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/TextBody.BodyVerySmall"
            android:textColor="@color/grey_40"
            app:layout_constraintStart_toStartOf="@+id/tv_label_event_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_event_time"
            tools:text="13:00" />

        <TextView
            android:id="@+id/tv_label_stock"
            style="@style/TextBody.Medium.BodyVerySmall"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/label_event_stock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_date" />

        <ImageView
            android:id="@+id/iv_ic_goat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_goat"
            app:layout_constraintStart_toStartOf="@+id/tv_label_stock"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_stock" />

        <TextView
            android:id="@+id/tv_goat_value"
            style="@style/TextBody.BodyVerySmall"
            android:layout_marginStart="4dp"
            android:textColor="@color/grey_40"
            app:layout_constraintTop_toTopOf="@id/iv_ic_goat"
            app:layout_constraintBottom_toBottomOf="@+id/iv_ic_goat"
            app:layout_constraintStart_toEndOf="@+id/iv_ic_goat"
            tools:text="5/10" />


        <ImageView
            android:id="@+id/iv_ic_cow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cow"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_label_stock" />

        <TextView
            android:id="@+id/tv_cow_value"
            style="@style/TextBody.BodyVerySmall"
            android:layout_marginStart="4dp"
            android:textColor="@color/grey_40"
            tools:text="5/10"
            app:layout_constraintBottom_toBottomOf="@+id/iv_ic_cow"
            app:layout_constraintStart_toEndOf="@+id/iv_ic_cow"
            app:layout_constraintTop_toTopOf="@+id/iv_ic_cow" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>