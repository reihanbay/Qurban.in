<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.QurbanIn" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorOnSecondaryContainer">@color/green_40</item>
        <item name="colorSecondaryContainer">@color/green_60</item>
        <item name="colorOnSurfaceVariant">@color/grey_60</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.QurbanIn" parent="Base.Theme.QurbanIn"/>

    <style name="ContainerScreen" parent="Theme.QurbanIn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>
    <style name="TextBody" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody.BodyLarge" parent="TextBody">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody.BodySmall" parent="TextBody">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextBody.BodyVerySmall" parent="TextBody">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grey_40</item>
    </style>

    <style name="TextBody.Italic" parent="TextBody">
        <item name="fontFamily">@font/roboto_italic</item>
    </style>
    
    <style name="TextBody.Medium" parent="TextBody">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextBody.Medium.BodyVerySmall" parent="TextBody.Medium">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextBody.Medium.LabelMedium" parent="TextBody.Medium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextBody.Medium.HeadlineSmall" parent="TextBody.Medium">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextBody.Medium.BodyLarge" parent="TextBody.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody.Bold" parent="TextBody">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
    <style name="TextBody.Bold.TitleLarge" parent="TextBody.Bold">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextBody.Bold.BodyLarge" parent="TextBody.Bold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:backgroundTint">@color/green_40</item>
    </style>

    <style name="Button.Second" parent="Button">
        <item name="android:textColor">@color/green_20</item>
        <item name="android:backgroundTint">@color/green_100</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/green_60</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/green_20</item>
        <item name="tint">@color/green_20</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="color">@color/white</item>
    </style>
    
    <style name="TextInputRounded">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/green_40</item>
        <item name="cursorColor">@color/green_40</item>
        <item name="hintTextColor">@color/green_40</item>
    </style>

</resources>